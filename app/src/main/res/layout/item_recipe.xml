<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="@dimen/recipe_image_width_height"
        android:layout_height="@dimen/recipe_image_width_height"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/item_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin"
        android:layout_toEndOf="@id/recipe_image"
        android:layout_toRightOf="@id/recipe_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="Recipe title goes here" />

        <TextView
            android:id="@+id/recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Recipe ingredients go here" />

        <TextView
            android:id="@+id/recipe_href"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            tools:text="Recipe href goes here" />
    </LinearLayout>
</RelativeLayout>